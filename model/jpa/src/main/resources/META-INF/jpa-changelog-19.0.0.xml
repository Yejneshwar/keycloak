<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="keycloak" id="19.0.0-10135">
        <customChange class="org.keycloak.connections.jpa.updater.liquibase.custom.JpaUpdate19_0_0_DefaultPostLogoutRedirectUri"/>
          <addColumn tableName="REALM">
            <column name="SOTP_POLICY_COUNTER" type="INT" defaultValueNumeric="0">
                <constraints nullable="true"/>
            </column>
            <column name="SOTP_POLICY_WINDOW" type="INT" defaultValueNumeric="1">
                <constraints nullable="true"/>
            </column>
            <column name="SOTP_POLICY_PERIOD" type="INT" defaultValueNumeric="30">
                <constraints nullable="true"/>
            </column>
            <column name="SOTP_POLICY_DIGITS" type="INT" defaultValueNumeric="6">
                <constraints nullable="true"/>
            </column>
            <column name="SOTP_POLICY_ALG" type="VARCHAR(36)" defaultValue="HmacSHA1">
                <constraints nullable="true"/>
            </column>
            <column name="SOTP_POLICY_TYPE" type="VARCHAR(36)" defaultValue="totp">
                <constraints nullable="true"/>
            </column>
            <column name="VERIFY_PHONE_NUMBER" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
          </addColumn>
          <addColumn tableName="USER_ENTITY">
            <column name="PHONE_NUMBER_LOCALE" type="VARCHAR(2)"/>
            <column name="PHONE_NUMBER" type="VARCHAR(255)"/>
            <column name="PHONE_NUMBER_VERIFIED" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
          </addColumn>
        <addUniqueConstraint columnNames="REALM_ID,PHONE_NUMBER" constraintName="CONSTRAINT_P" tableName="USER_ENTITY"/>
    </changeSet>

</databaseChangeLog>